{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./out",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"]
  },
  "files": ["./index.js", "./steps/TodoApp/useTodoState.jsx"],
  "include": [
    "./steps/**/*.js",
    "./steps/**/*.jsx",
    "./steps-bkup/**/*.js",
    "./steps-bkup/**/*.jsx",
    "steps/*.d.ts"
  ],
  "exclude": ["bloc-utils/**/*"]
}
