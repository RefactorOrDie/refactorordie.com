{
  "compilerOptions": {
    "outDir": "./lib/",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom"]
  },
  "include": ["stories/*.ts", "stories/**/*.ts", "stories/**/*.tsx", "stories/**/*.js", "stories/**/*.jsx"],
  "exclude": ["./node_modules/*", "**/node_modules", "**/__*/**", "./lib/**"]
}
